<UserControl
    x:Class="HanyCo.Infra.UI.UserControls.DatabaseExplorerUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HanyCo.Infra.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="260"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--<TextBox x:Name="FilterTextBox" Style="{StaticResource LongTextBox}" TextChanged="FilterTextBox_TextChanged" />-->
        <TreeView
            x:Name="ServerExplorerTreeView"
            Grid.Row="1"
            SelectedItemChanged="ServerExplorerTreeView_SelectedItemChanged" />
    </Grid>
</UserControl>