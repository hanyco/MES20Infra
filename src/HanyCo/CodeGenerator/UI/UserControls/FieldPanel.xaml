<UserControl
    x:Class="HanyCo.Infra.UI.UserControls.FieldPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HanyCo.Infra.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Me"
    d:DesignHeight="48"
    d:DesignWidth="520"
    mc:Ignorable="d">
    <StackPanel Style="{StaticResource FieldPanel}">
        <TextBlock Style="{StaticResource LabelBlock}" Text="{Binding Title, ElementName=Me}" />
        <ContentPresenter Content="{Binding AdditionalContent, ElementName=Me}" />
    </StackPanel>
</UserControl>