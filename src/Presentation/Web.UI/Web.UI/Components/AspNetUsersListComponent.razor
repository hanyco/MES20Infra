@namespace Mes.HumanResources

@using HanyCo.Infra.Blazor
@using Microsoft.Extensions.Caching.Memory
@using Microsoft.AspNetCore.Components
@using Mes.HumanResources.Dtos
@using Web.UI.Components.Shared

@inject IMemoryCache _memoryCache
@inject NavigationManager _navigationManager
@inject HttpClient _http

@inherits HanyCo.Infra.Blazor.ComponentBase<List<AspNetUserDto>, AspNetUserViewModel>


<MessageComponent @ref="MessageComponent" />

<div class="row">
<Button id='NewButton' name='NewButton' class='col-1 btn btn-success' @onclick='NewButton_OnClick'>New</Button>
</div>
<div class="row">
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Normalized User Name</th>
            <th>Email</th>
            <th>Normalized Email</th>
            <th>Email Confirmed</th>
            <th>Password Hash</th>
            <th>Security Stamp</th>
            <th>Concurrency Stamp</th>
            <th>Phone Number</th>
            <th>Phone Number Confirmed</th>
            <th>Two Factor Enabled</th>
            <th>Lockout End</th>
            <th>Lockout Enabled</th>
            <th>Access Failed Count</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (this.DataContext is not null)
            @foreach (var item in this.DataContext)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item.UserName</td>
            <td>@item.NormalizedUserName</td>
            <td>@item.Email</td>
            <td>@item.NormalizedEmail</td>
            <td>@item.EmailConfirmed</td>
            <td>@item.PasswordHash</td>
            <td>@item.SecurityStamp</td>
            <td>@item.ConcurrencyStamp</td>
            <td>@item.PhoneNumber</td>
            <td>@item.PhoneNumberConfirmed</td>
            <td>@item.TwoFactorEnabled</td>
            <td>@item.LockoutEnd</td>
            <td>@item.LockoutEnabled</td>
            <td>@item.AccessFailedCount</td>
            <td><button id="EditButton" name="EditButton" @onclick="@(() => EditButton_OnClick(item.Id))">Edit</button></td>
            <td><button id="DeleteButton" name="DeleteButton" @onclick="@(() => DeleteButton_OnClick(item.Id))">Delete</button></td>

        </tr>
            }
    </tbody>
</table>

</div>
