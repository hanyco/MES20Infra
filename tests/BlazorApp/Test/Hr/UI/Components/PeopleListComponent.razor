@namespace Test.Hr

@using Microsoft.Extensions.Caching.Memory
@using Library.Cqrs.Models.Queries
@using Library.Cqrs.Models.Commands
@using HanyCo.Infra.Security.Model
@using HanyCo.Infra.Blazor
@using Test.Hr

@inject IQueryProcessor _queryProcessor
@inject ICommandProcessor _commandProcessor
@inject IMemoryCache _memoryCache
@inject IUserContext _userContext

@inherits ComponentBase<List<PersonDto>, PersonViewModel>

<table id='Test.Hr.PersonViewModelGrid' name='Test.Hr.PersonViewModelGrid'>
<div class='row'>
    <thead>
<div class='row'>
    <tr/>
</div>
</thead>
    <tbody>
@if (this.DataContext is not null)
  @foreach (var item in this.DataContext)
  {
<div class='row'>
    <tr>
<div class='row'>
    <td>@item.NewButton</td>
    <td>
<button id='NewButton' name='NewButton' class='btn btn-success' type='formbutton' @onclick='() => this.NewButton_OnClick(item.Id)'>New</button></td>
    <td>@item.Id</td>
    <td>@item.FirstName</td>
    <td>@item.LastName</td>
    <td>@item.DateOfBirth</td>
    <td>@item.Height</td>
    <td>
<th name='Id'>Id</th>
<th name='FirstName'>First Name</th>
<th name='LastName'>Last Name</th>
<th name='DateOfBirth'>Date Of Birth</th>
<th name='Height'>Height</th></td>
</div>
</tr>
</div>
  }
</tbody>
</div>
</table>